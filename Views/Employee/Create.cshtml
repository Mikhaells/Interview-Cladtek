@model Cladtek_Interview.Models.Employee

@{
    ViewBag.Title = Model.EmployeeId == 0 ? "Add New Employee" : "Edit Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Razor variable for positions
    var positions = new[] { "Operator", "Technician", "Leader", "Supervisor", "Manager" };
}

<div class="content-header">
    <h1>@ViewBag.Title</h1>
</div>

<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Employee Form</h3>
                </div>

                @using (Html.BeginForm(Model.EmployeeId == 0 ? "Create" : "Edit", "Employee", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    if (Model.EmployeeId > 0)
                    {
                        @Html.HiddenFor(m => m.EmployeeId);
                    }

                    <div class="box-body">
                        <div class="form-group">
                            <label>NIK <span class="text-red">*</span></label>
                            @Html.TextBoxFor(m => m.NIK, new { @class = "form-control", @placeholder = "Enter NIK" })
                            @Html.ValidationMessageFor(m => m.NIK, "", new { @class = "text-red" })
                        </div>
                        <div class="form-group">
                            <label>Employee Name <span class="text-red">*</span></label>
                            @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control", @placeholder = "Enter employee name" })
                            @Html.ValidationMessageFor(m => m.EmployeeName, "", new { @class = "text-red" })
                        </div>
                        <div class="form-group">
                            <label>Department <span class="text-red">*</span></label>
                            @Html.DropDownListFor(m => m.DepartmentId,
                                new SelectList(ViewBag.Departments, "DepartmentId", "DepartmentName"),
                                "-- Select Department --",
                                new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.DepartmentId, "", new { @class = "text-red" })
                        </div>
                        <div class="form-group">
                            <label>Position <span class="text-red">*</span></label>
                            @{
                                var positionList = positions.Select(p => new SelectListItem { Text = p, Value = p });
                            }
                            @Html.DropDownListFor(m => m.Position, positionList, "-- Select Position --", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Position, "", new { @class = "text-red" })
                        </div>
                        <div class="form-group">
                            <label>Email <span class="text-red">*</span></label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "Enter email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red" })
                        </div>
                        <div class="form-group">
                            <label>Allowances</label>
                            <div class="checkbox">
                                @{
                                    bool showLaptop = Model.Position == "Supervisor" || Model.Position == "Manager" || string.IsNullOrEmpty(Model.Position);
                                }
                                <label>
                                    @Html.CheckBoxFor(m => m.HasLaptop, new { @disabled = !showLaptop })
                                    Laptop Allowance
                                    @if (!showLaptop && !string.IsNullOrEmpty(Model.Position))
                                    {
                                        <small class="text-muted">(Available for Supervisor and Manager only)</small>
                                    }
                                </label>
                            </div>
                            <div class="checkbox">
                                @{
                                    bool showMeal = Model.Position != "Manager" || string.IsNullOrEmpty(Model.Position);
                                }
                                <label>
                                    @Html.CheckBoxFor(m => m.HasMealAllowance, new { @disabled = !showMeal })
                                    Meal Allowance
                                    @if (!showMeal && !string.IsNullOrEmpty(Model.Position))
                                    {
                                        <small class="text-muted">(Not available for Manager)</small>
                                    }
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-default">
                            <i class="fa fa-times"></i> Cancel
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Position').change(function () {
                var position = $(this).val();
                $('#HasLaptop').prop('disabled', position !== 'Supervisor' && position !== 'Manager' && position !== '');
                $('#HasMealAllowance').prop('disabled', position === 'Manager');
                if (position === 'Manager') {
                    $('#HasMealAllowance').prop('checked', false);
                }
            });
        });
    </script>
}